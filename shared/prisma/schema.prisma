generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  source    Source
  userId    String  @map("user_id")
  name      String?
  age       Int?
  gender    Gender?
  country   String?
  city      String?
  username  String?
  followers Int?
  events    Event[]

  @@unique([source, userId])
  @@index([gender])
  @@index([country])
  @@index([city])
  @@index([age])
  @@map("users")
}

model Event {
  id          String      @id @default(uuid())
  eventId     String      @map("event_id")
  timestamp   DateTime
  eventType   String      @map("event_type")
  funnelStage FunnelStage @map("funnel_stage")
  source      Source
  data        Json
  userId      String      @map("user_id")
  user        User        @relation(fields: [userId], references: [id])

  @@index([timestamp])
  @@index([eventType])
  @@index([funnelStage])
  @@map("events")
}

model OutboxEvent {
  id         String       @id @default(uuid())
  requestId  String       @map("request_id")

  payload    Json
  status     OutboxStatus @default(PENDING)
  error      String?
  retryCount Int          @default(0) @map("retry_count")

  createdAt  DateTime     @default(now()) @map("created_at")
  sentAt     DateTime?    @map("sent_at")

  @@index([status])
  @@index([createdAt])
  @@map("outbox_events")
}

enum OutboxStatus {
  PENDING
  SENT
  FAILED

  @@map("outbox_status")
}

enum Source {
  facebook
  tiktok

  @@map("sources")
}

enum FunnelStage {
  top
  bottom

  @@map("funnel_stages")
}

enum Gender {
  male
  female
  non_binary

  @@map("genders")
}